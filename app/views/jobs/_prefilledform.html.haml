= form_for @job do |f|
  - if @job.errors.any?
    #error_explanation
      %h2= "#{pluralize(@job.errors.count, "error")} prohibited this job from being saved:"
      %ul
        - @job.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    %legend New Job Request
    %div.col-lg-4
      = f.label :number_of_workers_needed
      = f.number_field :num_of_workers
    %div.col-lg-4
      = f.label :date_of_job
      = f.text_field :date_of_job, :id => "datetimepicker"
    / %div.col-lg-4
    /   = f.label :kind
    /   = f.text_field :kind
    %div.row
    %div.col-lg-6
      = f.label :description
      = f.text_area :description
    %div.row
    %div.col-lg-6
      = f.label :requirements
      = f.text_field :requirement
    %div.col-lg-4
      = f.label :english_level_required
      = f.text_field :english_level
    %div.row
    %div.col-lg-4
      = f.label :employer_first_name
      = f.text_field :employer_first_name, :value => current_user.profile.first_name
    %div.col-lg-4
      = f.label :employer_last_name
      = f.text_field :employer_last_name, :value => current_user.profile.last_name
    %div.row
    %div.col-lg-4
      = f.label :duration
      = f.text_field :duration
    %div.col-lg-4
      = f.label :address
      = f.text_field :address, :value => current_user.profile.address
    %div.col-lg-4
      = f.label :cross_street
      = f.text_field :cross_street
    %div.col-lg-4
      = f.label :phone_number
      = f.telephone_field :phone_number, :class => "phone", :value => current_user.profile.cell_phone
    %div.col-lg-4
      = f.label :phone_type
      = f.text_field :phone_kind, :value => "Cell Phone"
    %div.col-lg-4
      = f.label :referred_by
      = f.text_field :referred_by
    %div.col-lg-4
      = f.label :payment
      = f.text_field :payment
    %div.col-lg-4
      = f.label :one_time
      = f.check_box :one_time
    %div.col-lg-4
      = f.label :on_going
      = f.check_box :on_going
    %div.col-lg-4
      = f.label :frequency
      = f.text_field :frequency
    %div.col-lg-4
      = f.label :will_pick_up
      = f.check_box :will_pick_up
    %div.col-lg-4
      = f.label :is_this_an_estimate?
      = f.check_box :estimate
    - if admin_user_signed_in?
      %div.col-lg-4
        = f.label :job_status
        = f.text_field :job_status
      %div.col-lg-4
        = f.label :dispatcher_id
        = f.number_field :dispatcher_id
      %div.col-lg-4
        = f.label :receiver_id
        = f.number_field :receiver_id
      %div.col-lg-4
        = f.label :estimate_accepted
        = f.check_box :estimate_accepted
      %div.col-lg-4
        = f.label :estimate_amount
        = f.text_field :estimate_amount
      %div.col-lg-4
        = f.label :employer_profile_id
        = f.number_field :employer_profile_id
    - else
      .actions
        = f.submit 'Save'