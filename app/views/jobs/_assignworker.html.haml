= form_for @job, remote: true do |f|
  - if @job.errors.any?
    #error_explanation
      %h2= "#{pluralize(@job.errors.count, "error")} prohibited this job from being saved:"
      %ul
        - @job.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    %legend Assign Workers
    %div.large-4.columns
      = label_tag :enter_worker_first_name
      = text_field_tag :first_name
    %div.large-4.columns
      = label_tag :enter_worker_last_name
      = text_field_tag :last_name
    %div.row
    .actions
      = f.submit 'Save', :class => :button