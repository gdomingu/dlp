  .field
    = f.label :phone_number
    = f.number_field :phone_number
  .field
    = f.label :phone_kind
    = f.text_field :phone_kind
  .field
    = f.label :referred_by
    = f.text_field :referred_by
  .field
    = f.label :payment
    = f.text_field :payment
  .field
    = f.label :one_time
    = f.check_box :one_time
  .field
    = f.label :on_going
    = f.check_box :on_going
  .field
    = f.label :frequency
    = f.text_field :frequency
  .field
    = f.label :num_of_workers
