    = f.label :description
    = f.text_field :description
  .field
    = f.label :date_of_job
    = f.datetime_select :date_of_job
  .field
    = f.label :duration
    = f.text_field :duration
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :cross_street
